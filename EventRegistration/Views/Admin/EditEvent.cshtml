@model EventRegistration.Models.Event

<h2>Редагувати івент</h2>

<form asp-action="EditEvent" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Title">Назва</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label for="EventDate">Дата та час</label>
        <input asp-for="EventDate" type="datetime-local" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Location">Локація</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Зберегти</button>
    <a class="btn btn-secondary mt-3" href="/Admin/Index">Назад</a>
</form>